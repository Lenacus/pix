{
  "name": "pix-load-testing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "report-campaign": "artillery report report/campaign.json",
    "report-connect": "artillery report report/connect.json",
    "report-orga-collective-results": "artillery report report/orga-collective-results.json",
    "report-orga-participant-results": "artillery report report/orga-participant-results.json",
    "report-orga-results": "artillery report report/orga-results.json",
    "report-signup-and-placement": "artillery report report/signup-and-placement.json",
    "report-start-competence-v2": "artillery report report/start-competence-v2.json",

    "report-users": "npm run report-signup-and-placement & npm run report-start-competence-v2",
    "report-orga": "npm run report-orga-collective-results & npm run report-orga-participant-results & npm run report-orga-results",

    "report-all": "npm run report-users & npm run report-orga",

    "start-campaign": "artillery run --config config/common.yml -o report/campaign.json scenarios/campaign.yml",
    "start-connect": "artillery run --config config/common.yml -o report/connect.json scenarios/connect.yml",
    "start-competence-v2": "artillery run --config config/common.yml -o report/start-competence-v2.json scenarios/signup-and-competence-test.yml",
    "start-signup-and-placement": "artillery run --config config/common.yml -o report/signup-and-placement.json scenarios/signup-and-placement.yml",
    "start-test-users": "npm run start-competence-v2 && npm run start-signup-and-placement",

    "start-orga-collective-results": "artillery run --config config/common.yml -o report/orga-collective-results.json scenarios/orga-collective-results.yml",
    "start-orga-participant-results": "artillery run --config config/common.yml -o report/orga-participant-results.json scenarios/orga-participant-results.yml",
    "start-orga-results": "artillery run --config config/common.yml -o report/orga-results.json scenarios/orga-results.yml",
    "start-test-orga": "npm run start-orga-collective-results && npm run start-orga-participant-results && npm run start-orga-results",

    "start-all": "npm run start-test-users && npm run start-test-orga"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "artillery": "^1.6.0-27",
    "faker": "^4.1.0"
  }
}
